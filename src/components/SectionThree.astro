---
const {ImgSrc} = Astro.props;
---

<section>
  <div class="grid1_1-1">
    <div class="imgCase">
    <img class="round-img" src=`${ImgSrc}` alt="round image" />
</div>
<div>
<slot />
</div>
  </div>
</section>
  
  <style>
    
    section{
        padding: 20px 30px;
        margin-bottom: 4rem;
        height: fit-content;
     .imgCase{
     width:500px; 
     height: 500px;
     overflow:hidden ;
     border-radius: 50%;
    } 

    .round-img{
      width: 100%;  
      height: 100%;
      object-fit: cover;
    }
    .grid1_1-1{
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
    }
   

    @media (max-width: 800px) {
     .imgCase{
       width:350px; 
     height: 350px;  
     } 
     
      .grid1_1-1 {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .grid1_1-1 div {
    margin-bottom: 1rem;
    }
    } 
}
    </style>