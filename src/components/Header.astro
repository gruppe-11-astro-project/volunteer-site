---
const {title,title2} =Astro.props;
---

<header>
<div id="box-1">
<h1>{title}</h1>
</div>
<div id="box-2">
<h2>{title2}</h2>
<slot/>
</div>

</header>


<style>
  header {
    background-color: var(--bg-light);
    padding-top: 20vh;
    /* position: relative;  */
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr 1fr 1fr;
    gap:0;

    #box-1{
    grid-column:2/5 ;
    grid-row:1/3 ;

    height: 100%;
    display:flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-end;
 
    }

    #box-2{
    grid-column:3/7 ;
    grid-row:3/5 ;

    height: fit-content;
     display:flex;
     align-items: center;
    flex-direction: column;
    

    }



    

  h1{
    font-family: "Crimson Text";
    font-size: clamp(38px, 8vw, 100px);
    white-space: nowrap;
    color:var(--primary);
    margin: 0;

    /* padding: 0.5rem 0;
    margin: 0;
    max-width: fit-content;
    position: absolute;
    top:25%;
    left:25%; */
  }

  h2{
     font-family: "Crimson Text";
     background-color: var(--accent);
    font-size: clamp(38px, 8vw, 100px);
    color: var(--bg-light);
    margin:0;
    max-width: fit-content;
    /* padding: 0.5rem 0;
    margin: 0;
    max-width: fit-content;
     position: absolute;
   bottom:25%;
    left:32%; */
  }

  .headertxt{
    margin:0;
    max-width: fit-content;
  }
}

@media (max-width: 600px) {

     header{
   padding-top:2vh;
   display: flex;
   flex-direction: column;
   align-items: center;
   margin-bottom: 2rem;
    


  }
  

    
}

@media (min-width: 600px) and (max-width: 800px) {
   header{
   padding-top: 10vh; 

   } 
} 
</style>
