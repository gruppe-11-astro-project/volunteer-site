---
const { quote, bgImageSrc, ImageSrc } = Astro.props;
---

<article class="card" style={`background-image: url(${bgImageSrc});`}>
  <!-- <img src=`${bgImageSrc}` alt=`Image og ${name}` /> -->
  <div class="card-screen">&nbsp;</div>
  <div class="quote-case">
 <img class="quote-img" src=`${ImageSrc}` alt="quotes image" />
    <p class="title">{quote}</p>
 </div>
</article>

<style>
    article{
        /* background-image: url(`${bgImageSrc}`); */


            width:27vw;
            min-width:243px;
           aspect-ratio: 1/1;
            position: relative;
            background-size: cover;
            background-position: center;
            border-radius: 10%;
            overflow: hidden;
            margin-bottom: 0.5rem;
        
   

    .card-screen{
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.51);
        z-index: -1;
    }

    p{
        color: var(--bg-light);
        position: absolute;
       
    }

    .quote-img{
        width: 30px;
        height: auto;
        

    }

    
    .quote-case{
          position: absolute;
          width: 80%;
        bottom:65%;
        left:5%;
        z-index: 3;
    }

     }

</style>
